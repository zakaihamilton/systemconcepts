{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "next",
        "next/core-web-vitals",
        "prettier"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 9,
        "ecmaFeatures": {
            "jsx": true
        },
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-anonymous-default-export": [
            "error",
            {
                "allowArray": true,
                "allowArrowFunction": true,
                "allowAnonymousClass": true,
                "allowAnonymousFunction": true,
                "allowCallExpression": true, // The true value here is for backward compatibility
                "allowLiteral": true,
                "allowObject": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/react-in-jsx-scope": "error",
        "react/prop-types": [
            0
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "globals": {
        "screens": true,
        "COMPONENT": true,
        "React": true,
        "workbox": true,
        "importScripts": true
    }
}